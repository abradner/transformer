<% content_for :title, "Transformer - String Transformations" %>

<div class="container mx-auto px-4 py-8">
  <header class="mb-8">
    <h1 class="text-4xl font-bold text-gray-900 mb-2">Transformer</h1>
    <p class="text-lg text-gray-600">Transform strings with powerful built-in and custom YAML transformations</p>
  </header>

  <div class="bg-white rounded-lg shadow-lg p-6" data-controller="transformation">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Input Section -->
      <div class="space-y-4">
        <div>
          <label for="transformation-select" class="block text-sm font-medium text-gray-700 mb-2">
            Choose Transformation:
          </label>
          <select id="transformation-select" 
                  data-transformation-target="selector"
                  data-action="change->transformation#transform"
                  class="w-full p-3 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
            <option value="">Select a transformation...</option>
          </select>
        </div>

        <div>
          <label for="input-text" class="block text-sm font-medium text-gray-700 mb-2">
            Input Text:
          </label>
          <textarea id="input-text"
                    data-transformation-target="input"
                    data-action="input->transformation#transform"
                    rows="12"
                    placeholder="Enter text to transform..."
                    class="w-full p-3 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 font-mono text-sm"></textarea>
        </div>
      </div>

      <!-- Output Section -->
      <div class="space-y-4">
        <div class="flex items-center justify-between">
          <label class="block text-sm font-medium text-gray-700">
            Output:
          </label>
          <div data-transformation-target="status" class="text-sm">
            <!-- Status messages will appear here -->
          </div>
        </div>

        <div class="relative">
          <textarea data-transformation-target="output"
                    rows="12"
                    readonly
                    placeholder="Transformed output will appear here..."
                    class="w-full p-3 border border-gray-300 rounded-md bg-gray-50 font-mono text-sm"></textarea>
          
          <button type="button"
                  data-transformation-target="copyButton"
                  data-action="click->transformation#copy"
                  class="absolute top-2 right-2 px-3 py-1 bg-blue-500 text-white text-xs rounded hover:bg-blue-600 transition-colors"
                  style="display: none;">
            Copy
          </button>
        </div>

        <!-- Error Display -->
        <div data-transformation-target="error" 
             class="hidden p-4 bg-red-50 border border-red-200 rounded-md">
          <div class="flex">
            <div class="text-red-400">⚠️</div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">Transformation Error</h3>
              <div data-transformation-target="errorMessage" class="mt-2 text-sm text-red-700"></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Help Section -->
    <div class="mt-8 border-t pt-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Available Transformations</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 text-sm text-gray-600">
        <div>
          <strong>Base64 Encode:</strong> Encode text to Base64 format
        </div>
        <div>
          <strong>Base64 Decode:</strong> Decode Base64 text to plain text
        </div>
        <div>
          <strong>More transformations:</strong> YAML configurations and regex replacements coming soon
        </div>
      </div>
    </div>
  </div>
</div>
